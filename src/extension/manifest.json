{
  "manifest_version": 2,
  "name": "Are.na",
  "description": "Assemble and connect information.",
  "version": "0.40",
  "browser_action": {
    "default_icon": "icon-128.png",
    "default_title": "Are.na"
  },
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "webNavigation",
    "<all_urls>",
    "http://*/*",
    "https://*/*",
    "storage",
    "identity"
  ],
  "background": {
    "scripts": ["background.js"],
    "persist": false
  },
  "web_accessible_resources": ["/", "index.html", "iframe.css"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["injectiframe.js"]
    }
  ]
}

@require '../../../node_modules/rupture/rupture'
@require 'labs'
@require 'graph'
@require 'pricing'
@require 'features'

rupture.mobile-cutoff = 500px

.body--static
  background-color #fff
  &__header
    margin (unit * 6) auto (unit * 3)
    text-align center
    max-width 600px
  p
    p()
    margin 0.75em auto
    font-size 20px
  ul
    margin 0
    padding 0
  h1, h2
    text-align center
    antialiased()
    color hovergray
    font-weight normal
  h1.center, h2.center
    text-align center
  h1
    font-size 28px
    margin 0 auto (unit * 4)
  h2
    margin (unit * 2) 0
  h2.is-left
    text-align left

.home--about
  margin-top unit * 6

.about-section
  max-width 600px
  margin (unit * 6) auto 0
  font-size 20px
  line-height 1.5
  overflow hidden
  img
    max-width 100%
    margin (unit * 2) auto
    display block
  img:not(.no-border)
    border 1px solid bordergray
  &:last-of-type
    margin-bottom (unit * 10)
  a
    font-weight bold
  p
    p()
    font-size 20px
    margin-bottom unit
  +below(900px)
    padding (unit)

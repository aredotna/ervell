.premium--status.abs-fill
  .inner

.about-section.about-section--premium
  h1.center Pricing
  .premium-tiers
    .premium-tiers__tier.premium-tiers__tier--basic
      .premium-tiers__tier__title Are.na
      .premium-tiers__tier__price(class= user ? 'selected' : 'selectable')
        | Free
        unless user
          br
          strong Sign up
      .premium-tiers__tier__includes Includes
      ul.premium-tiers__tier__features
        li Multiple privacy settings
        li Unlimited channels
        li Unlimited blocks
        li 25MB upload limit
    .premium-tiers__tier.premium-tiers__tier--premium
      .premium-tiers__tier__title Premium

      a.premium-tiers__tier__price(
        href= (user ? '/settings/billing' : "#{sd.APP_URL}/log_in?redirect-to=/settings/billing")
        class= user && user.isPremium() ? 'selected' : 'selectable'
      )
        if user && user.isPremium()
          strong Thank you!
        else
          | $45 / year&nbsp;
          br
          strong Activate Premium
      .premium-tiers__tier__includes Are.na +
      ul.premium-tiers__tier__features
        li Quick search
        li Channel mute
        li List view
        li Hide from search engines
        li Channel management tool
        li Custom profile bio
    .premium-tiers__tier.premium-tiers__tier--enterprise
      .premium-tiers__tier__title Enterprise
      a.premium-tiers__tier__price.selectable( href='mailto:info@are.na' )
        strong Contact Us
      .premium-tiers__tier__includes Are.na + Premium +
      ul.premium-tiers__tier__features
        li Custom Domains
        li White-label support

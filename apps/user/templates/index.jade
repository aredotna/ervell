extends ../../../components/layout/index.jade

block body
  include ./path
  if user && user.isPremium() && !following && !followers
  .channel-container.channel-container--user( class=blocks.length ? '' : 'is-empty' )
    .profile-contents
      - content = sd.SUBJECT ? sd.SUBJECT + "s" : "blocks and channels"
      - searchee = (user && author.id == user.id) ? "your " : author.get('username') + "'s public "
      - title = searchee + content
      include ../../../components/blocks/container/templates/index
    .channel-empty
      include ./empty
    include ../../../components/layout/loader/templates/infinite

block scripts
  script( src=asset('/assets/user.js') )


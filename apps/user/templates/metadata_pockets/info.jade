extends ../../../../components/meta_pocket/templates/meta_pocket

block vars
  - title = "Info"
  - extraClasses = "is-readable"
  - id = "metadata--info"

block content
  ul
    if author.id != 21
      li: #[a(href="/" + author.get('slug') + '/following') #{author.get('following_count')} Following] / #[a(href="/" + author.get('slug') + '/followers') #{author.get('follower_count')} Followers]
    if author && user && author.id != user.id
      li: &nbsp;
      li: a.follow_button.pointer(data-type="User", data-id="#{author.id}")
      li: a.message_button.pointer(data-type="User", data-id="#{author.id}")

extends ../../../components/path/templates/path.jade

block path
  li.path__sub: span Search results for '#{search}'

block metadata
  .metadata
    .metadata__column
      .metadata__title View
      .metadata__text
        ul.breadcrumb
          li: a(href="/search/#{search}" class=sd.SUBJECT ? "" : "is-active" ).metadata--selector__option All
          li: a(href="/search/#{search}/channels" class=sd.SUBJECT == 'channels' ? "is-active" : "" ).metadata--selector__option Channels
          li: a(href="/search/#{search}/blocks" class=sd.SUBJECT == 'blocks' ? "is-active" : "").metadata--selector__option Blocks
          li: a(href="/search/#{search}/users" class=sd.SUBJECT == 'users' ? "is-active" : "").metadata--selector__option Users
.channel--drop-zone.abs-fill
  .channel--drop-zone__progress.progress.abs-fill
  .inner
    h1.channel--drop-zone__instructions Drop files here to add to #{channel.get('title')}
    h1.channel--drop-zone__feedback Uploading file(s)...
    form(id="fileupload" action="#{policy.bucket}" method="POST" enctype="multipart/form-data" data-fileupload="")
      input(type="hidden" name="key" value="#{policy.key}")
      input(type="hidden" name="AWSAccessKeyId" value="#{policy.AWSAccessKeyId}")
      input(type="hidden" name="acl" value="#{policy.acl}")
      input(type="hidden" name="success_action_status" value="#{policy.success_action_status}")
      input(type="hidden" name="policy" value="#{policy.policy}")
      input(type="hidden" name="signature" value="#{policy.signature}")
      input(type="file" name="file" multiple)

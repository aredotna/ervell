extends ../../../components/layout/index

block meta
  include _meta
  != channelComponent.styles

block body
  .channel.js-channel
    .Constrain.js-channel-component
      != channelComponent.html

    .channel-container
      .channel-contents.js-channel-contents
        - title = channel.get('title')
        include ../../../components/blocks/container/templates/index

      .channel-empty
        include _empty

    if user
      .channel__filedrop.flex-container

    #l-infinite-loader-container
      #l-loader

block scripts
  script( src= asset('/assets/channel.js') )
  script.
    window.__APOLLO_STATE__ = !{JSON.stringify(channelComponent.state).replace(/</g, '\\u003c')};

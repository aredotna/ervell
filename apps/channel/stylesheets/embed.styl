.body--embed
  overflow hidden
.channel-embed
  &__header
    position fixed
    top 0
    left 0
    width 100%
    height 50px
    z-index 2
    background white
    border-bottom 1px solid bordergray
    &__title
      &__channel
        white-space nowrap
        overflow hidden
        text-overflow ellipsis
        padding-right unit
        max-width 290px
    &__logo svg
      padding-top 5px
      width 27px
      height 30px
      fill textgray
    .path__inner
      padding 0
      margin 0
    .path__headline
      margin-bottom 0
      font-size 1.25rem
      display flex
      float none
      align-items center
      justify-content space-between
      height 50px
      padding 0 unit
  &__contents
    margin-top 50px
    height calc(100vh - 50px)
    overflow-x auto
    .block-collection
      margin-top (unit * 3)

  @media (min-width:(block_width_mar * 3) + 20) and (max-width:(block_width_mar * 4) + 20)
    .block-collection
      .block-item:nth-of-type(1n+8):not(.grid__block--embedded)
        display none
  @media (min-width:(block_width_mar * 2) + 20) and (max-width:(block_width_mar * 3) + 20)
    .block-collection
      .block-item:nth-of-type(1n+7):not(.grid__block--embedded)
        display none
  @media (min-width:0) and (max-width:(block_width_mar * 2) + 20)
    .block-collection
      .block-item:nth-of-type(1n+5):not(.grid__block--embedded)
        display none
    .path__headline
      font-size 1rem
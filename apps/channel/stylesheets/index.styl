@require '../components/mute/index.styl'
@require '../components/collaborators/index.styl'

.channel-container
  padding-top unit
  position relative

  .flex-container:before, .flex-container:after
    display none

  .channel-empty
    display none

  &.is-empty .channel-empty
    display block

.channel 
  .metadata--container
    padding-bottom 0

.channel--drop-zone
  -webkit-transform translateY(-1000%)
  -ms-transform translateY(-1000%)
  transform translateY(-1000%)
  background-color rgba(255,255,255, 0.96)
  z-index lightbox_z

  &.is-droppable
    -webkit-transform translateY(0)
    -ms-transform translateY(0)
    transform translateY(0)

  .abs-fill, &.abs-fill
    position fixed

  .inner
    pointer-events none
    position fixed
    top 50%
    width 100%
    text-align center
    v-align()

  .channel--drop-zone__progress
    width 0px
    background-color rgba(221, 221, 221, 0.35)

  input[type='file']
    display none

  h1
    font-weight normal

  .channel--drop-zone__feedback
    display none

  .channel--drop-zone__instructions
    display block

  &.is-uploading

    .channel--drop-zone__feedback
      display block

    .channel--drop-zone__instructions
      display none

.export__status
  color alert

.delete-channel--confirmation
  color alert
  display none

  &.is-active
    display block

  .delete-channel--confirmation__no
    margin 0 0 0 6px

#metadata--info__description
  width 100%

  .attr-value p
    margin-bottom (unit / 2)

#metadata--description, #metadata--info
  .attribute-group textarea
    font-size 12px

    &:focus
      height 80px

  span
    margin-right 6px
    color textgray

  span:hover
    hovergray

#metadata--info__collaborators span
  color lightgray

#metadata--connections, #metadata--container
  position relative

#metadata--connections
  overflow-y visible
  .connection-list
    margin-bottom unit  

#metadata__column-manage
  margin-top unit
  position relative
  text-align center
  opacity 0
  pointer-events none
  .toggle-settings-trigger
    color lightgray
    font-size 36px
    letter-spacing -4px
    font-family font_serif 
    height (unit * 2)
    line-height (unit * 2)
    &:before
      content "···"
    &:hover
      color hovergray
    &:hover:before
      content attr(data-message)
      color textgray
      font-size 12px 
      font-family font_sans !important
      letter-spacing 0px
      line-height (unit * 2)
      vertical-align middle
      display block

#metadata__column-manage.is-editable
  opacity 1
  pointer-events all

#metadata--connections
  word-break break-word

.channel-results-container
  position absolute
  top 0
  left 0
  width 100%
  padding-top 32px
  display none

  &.is-active
    display block

@require './embed.styl'
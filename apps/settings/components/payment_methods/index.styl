.payment-methods
  &__cards
    collapsed-margins(1em)
    width 100%

  &__empty
    font-size font-size-sm
    text-align center


.payment-method
  font-size font-size-sm

  > td
    padding 0.25em

  &__card
    text-transform uppercase
    font-size font-size-xs

    > span
      margin 0 0.25em
      font-family font_mono
      font-size font-size-sm

  &__default
  &__remove
    text-align right

    > span
      color colors-gray-light

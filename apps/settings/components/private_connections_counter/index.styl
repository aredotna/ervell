private-connection-count-colors-exceeded = colors-state-alert

.PrivateConnectionCount
  &__count
    float right

  &__warning
    text-align right
    color private-connection-count-colors-exceeded

  &[data-state='exceeded']
    .PrivateConnectionCount
      &__count
        > span
          color private-connection-count-colors-exceeded

    .PrivateConnectionsMeter
      &__fill
        background-color private-connection-count-colors-exceeded

.PrivateConnectionsMeter
  height 2em
  border 1px solid colors-gray-border
  overflow hidden

  &__fill
    height 100%
    background-color colors-gray-text

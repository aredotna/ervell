.BlockSidebar
  position relative
  display flex
  flex-direction column
  height 100vh
  font-size font-size-sm
  width (block-sidebar-width + topbar_h)
  min-width @width
  padding topbar_h 2em 2em 2em
  background-color white
  overflow-y auto

  // General
  &__content
    flex 1
    padding 1em 0 0 0

  &__header
    margin 0.5em 0
    padding-bottom 0.5em
    font-size font-size-sm
    line-height 1
    color colors-gray-light
    border-bottom 1px solid colors-gray-border

  &__section
    collapsed-margins(4em)

  // Specific attributes
  &__title
    collapsed-margins(0.5em)
    width 100%
    padding-right 0.5em
    text-align left
    font-size font-size-h5
    line-height line-height-base
    word-break break-word

  &__timestamps
    collapsed-margins(0.5em)
    font-size font-size-xs
    line-height line-height-tall
    color colors-gray-light

    > time
      display block
      > a
        font-weight bold

  &__description
    collapsed-margins(0.5em)
    overflow hidden
    font-size font-size-sm
    line-height line-height-tall

    *
      word-break break-word
    p
      collapsed-margins(1em)
    a
      font-weight bold

  &__provenance
    collapsed-margins(0.5em)
    font-size font-size-xs
    line-height line-height-base

    > a
      display block
      font-weight bold
      > span
        ellipsis(85%)

    &:empty
      display none

  &__description + &__provenance
    collapsed-margins(2em)

  &__toggle
    display block
    text-align right
    color colors-gray-light
    font-weight bold
    font-size font-size-sm
    user-select none

    > a
      cursor pointer

  // State
  &--hidden
    display none

  // Responsive
  +below(block-sidebar-breakpoint)
    width 100%
    min-width auto
    height auto
    padding 0 2em

    .BlockSidebar__toggle
      display none

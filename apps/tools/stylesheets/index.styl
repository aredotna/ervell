.tools
  &--path
    .tab--container
      +mobile()
        display none
  &__mobile-title
    display none
    +mobile()
      display block
      h4()
      margin-left (unit / 2)
  .tab-content
    +mobile()
      display block
  &__frame
    width 50%
    margin (s_margin * 3) auto
    border 2px solid bordergray
    padding 30px 20px 30px 20px
    font-size 1em
    font-weight normal
    line-height 1.4

    img
      max-width 100%

    strong
      text-align center

    p
      margin (s_margin * 2) 0

    .caption
      font-size s_caption
      padding-top 15px
      text-align center
      font-weight bold

    input
      background-color bordergray
      margin 5px 0 10px 0

    button
      margin 20px 0 0 0

    .small
      font-size s_caption + 1
      color textgray
      margin 0 0 8px 0
      line-height 14px

.static__tools__bookmarklet-button, .static__tools__social-button
  display block
  width 100%
  height 50px
  line-height 50px
  font-weight bold
  text-align center
  background-color bordergray
  border 1px dashed lightgray
  margin 12px 0 12px 0

#tab--premium
  h2
    color lightgray
    text-align center
    margin 55px 0 -20px 0
    font-weight normal

  h3
    font-size 1em
    margin 0 0 0 1px

  .tools__frame
    background-color backgroundgray
    font-size 1.2em

    button
      margin 10px 0 0 0
      font-size 18px

.premium--caption
  text-align left
  font-size 0.9em
  margin -2px 0 0 1px

  a
    font-weight bold

.premium--img
  margin 12px 0 60px 0
  border 1px solid bordergray
  box-shadow downshadow

.premium--is-premium, .tab--container__nav__item--premium a
  color success

.premium--status
  -webkit-transform translateY(-1000%)
  -ms-transform translateY(-1000%)
  transform translateY(-1000%)
  background-color rgba(255,255,255, 0.96)
  z-index lightbox_z

  &.is-active
    -webkit-transform translateY(0)
    -ms-transform translateY(0)
    transform translateY(0)

  &.abs-fill
    position fixed

  .inner
    pointer-events none
    position fixed
    top 50%
    width 100%
    text-align center
    v-align()

  &.is-error
    color alert

.is-successful
  color success

@media (max-width: 800px)
  .tools__frame
    width 100%

@require './friends.styl'
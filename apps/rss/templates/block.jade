case block.get('class')
  when "User"
    a(href="#{sd.APP_URL}/#{block.getHref()}")
  when "Channel"
    a(href="#{sd.APP_URL}/#{block.getHref()}")
  when "Media"
    != block.get('embed').html
  when "Image"
    a(href="#{block.getSourceUrl()}" target="_blank")
      img(src="#{block.resizeImage(1000,1000, 'large')}")
  when "Link"
    != block.get('description_html')
    a(href="#{block.getSourceUrl()}" target="_blank")
      img(src="#{block.resizeImage(1000,1000, 'large')}")
  when "Attachment"
    a.block-attachment(href="#{block.getSourceUrl()}" target="_blank")= block.get('title')
  when "Text"
    != block.get('content_html')

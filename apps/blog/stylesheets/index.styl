blogPadding = 30px

.blog-body
  margin ((unit * 5) + topbar_h) 0
  color black
  .site-header
    text-align center
    margin-bottom (unit * 3)
    h1
      h1()
      font-weight normal
  .site-title
    font-weight 300
    color black
  .wrapper
    max-width 600px
    margin 0 auto
    padding 0 blogPadding
  .page-content
    padding (unit * 1.5) 0
  .post-header, .post-category-title
    margin-bottom (unit * 1.5)
  .post-meta
    font-size 14px
  h1
    margin 0
    padding 0
    font-weight 300
  img
    max-width 100%
  p
    p()
    margin-bottom (unit * 1.5)

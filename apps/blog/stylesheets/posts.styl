.BlogPosts
  display flex
  flex-direction row
  flex-wrap wrap
  align-items center
  justify-content center
  margin 0 auto
  max-width 60em

  &__post
    display block
    height 500px
    width 250px
    margin 1em

    > h4
    > h5
      text-align left
      margin 0.25em auto 0

    > h4
      font-weight bold

    > span
      text-transform uppercase
      font-size font-size-xs

  &__post-image
    width 100%
    height 200px
    background-repeat no-repeat
    background-size contain
    background-position center center
    margin-bottom 1em

  &__excerpt
    margin 0.75em 0 1em
    line-height line-height-tall
    color colors-gray-text

.image-view-outer
  height 100%
  
.image-view
  text-align center
  cursor pointer
  position relative
  top 50%
  transform translateY(-50%)
  &__img
    padding unit * 2
    max-width 100%
    max-height 100vh

.image-modal
  .modalize-backdrop
    background-color rgba(255, 255, 255, 0.75)
  .modalize-close
    opacity 1
    background-color rgba(255, 255, 255, 0.75)
    border-radius 40px
    margin 10px
    width 40px
    height 40px
    padding 0
    text-align center
    line-height 42px
    display block
    span
      vertical-align middle
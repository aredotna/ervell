.modalize
  z-index rotate_z
  -webkit-transform translate3d(0,0,1px)
  opacity 0

  // Fade transition
  &[data-state='open']
  &.is-open
    opacity 1

  // Loading state
  &.is-loading
    .modalize-backdrop::before
      display block
      content ''
      // spinner(20px, 5px, white)

    .modalize-dialog
      opacity 0

.modalize
.modalize-backdrop
  position fixed
  top 0
  left 0
  height 100%
  width 100%
  min-height 100%

.modalize-backdrop
  display flex
  align-items center
  background-color rgba(white, 0.90)

  +below(800px)
    background-color rgba(white, 1)

.has-nobackdrop > .modalize-backdrop
  background-color transparent

.modalize-dialog
  position relative
  margin 0 auto
  width 100%
  height 100%
  text-align left
  overflow-y auto
  -webkit-overflow-scrolling touch
  background-color rgba(white, 0.75)
  &.is-notransition
    transition none

.modalize-close
  position absolute
  top 0
  right 0
  padding unit unit 40px 40px
  cursor pointer
  opacity 0.45
  z-index rotate_z + 1
  prevent-content-shift()
  transform translateZ(100)
  .iconic-sm:before
    font-weight 400
    font-size 16px !important

  +above(800px)
    &:hover
      opacity 1

  +below(800px)
    pointer-events all
    top 0px
    right 0px
    display block
    padding 10px
    .iconic-sm:before
      font-weight 400
      font-size 16px !important

.modalize-body
  height 100%
  min-height 100%
  overflow-y auto
  -webkit-overflow-scrolling touch

// Dialog transitions
// ------------------
.modalize-dialog
  // transition opacity 0.25s, transform 0.5s

  // Fade in/out
  // Transition duration: 250ms
  &[data-state='fade-out']
  &.is-fade-out
    opacity 0
  &[data-state='fade-in']
  &.is-fade-in
    opacity 1

  // Slide in/out
  // Transition duration: 500ms
  &[data-state='slide-out']
  &.is-slide-out
    transform translateY(100px)
    opacity 0
  &[data-state='slide-in']
  &.is-slide-in
    transform translateY(0)
    opacity 1

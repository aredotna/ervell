- colorClass = sd.IS_INVERTED ? 'is-inverted' : ''
- loggedInClass = user ? 'is-logged-in' : 'not-logged-in'
- extraClasses = ''

doctype html
html( class="#{colorClass} #{loggedInClass}" lang="en-US")
  head
    include modules/title
    include modules/meta
    include modules/styles

    block vars

  body( class= extraClasses )
    include header/templates/index

    .Container.js-container
      .Container__content
        block body

      //- Intentionally absent footer

    //- TODO: Refactor to append/remove
    #l-loader-container.abs-fill
      include loader/templates/index

    include modules/analytics
    include modules/scripts

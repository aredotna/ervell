topbar_h              = 50px
container_pad         = 20px

// shadows
downshadow            = 0px 0px 12px -7px rgba(0,0,0,0.75)

.color-lg
  color lightgray

v-align()
  transform translateY(-50%)

// transitions
transition(n, property = all)
  transition property ease-in n

// antialiased
antialiased()
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

clearfix()
  &:after
    content ""
    display table
    clear both

stripe($1, $2, angle)
  linear-gradient(angle, $1 25%, $2 25%, $2 50%, $1 50%, $1 75%, $2 75%, $2)

caret()
  display inline-block
  content ''
  width 0
  height 0
  vertical-align middle

  border-top 8px solid
  border-right 4px solid transparent
  border-left 4px solid transparent
  margin 2px 0 4px 4px

privacy-color(prefix, attr)
  colors = 'closed' closed, 'public' public, 'private' private
  for value in colors
    {prefix + value[0]}
      if attr == border-color
        border 2px solid
      {attr} value[1]

privacy-light-color(prefix, attr)
  colors = 'closed' closed, 'public' public, 'private' private
  for value in colors
    {prefix + value[0]}
      if attr == border-color
        border 2px solid
      {attr} alpha(value[1], 0.3)

privacy-color-border-hover(prefix, attr)
  colors = 'closed' closed, 'public' public, 'private' private
  for value in colors
    {prefix + value[0] + ':hover'}
      {attr} alpha(value[1], 0.6)

privacy-color-hover(prefix, attr)
  colors = 'closed' closed, 'public' public, 'private' private
  for value in colors
    {prefix + value[0] + ':hover'}
      {attr} value[1]

font-face('DTLHaarlemmerD-Medium', '../fonts')

@font-face
   font-family 'DTLHaarlemmerD-Medium'
   font-style 100
   src url('../fonts/DTLHaarlemmerD-Medium.ttf')

.haarlemmer
  font-family "DTLHaarlemmerD-Medium"
  font-weight normal

.serif-text
  font-family font_serif
  font-weight 100
  font-size 19px
  text-align left
  line-height 1.6em

  p
    margin .6em 0

collapsed-margins($a, $b = auto)
  margin $a $b

  if $b == 'auto'
    &:first-child
      margin-top: 0
    &:last-child
      margin-bottom: 0

  else
    &:first-child
      margin-left: 0
    &:last-child
      margin-right: 0

candy-striped(color)
  background-image linear-gradient(
    45deg,
    rgba(color, 0.5) 25%,
    transparent 25%,
    transparent 50%,
    rgba(color, 0.5) 50%,
    rgba(color, 0.5) 75%,
    transparent 75%,
    transparent
  )

outline-border(size, color, radius)
  &:after
    display block
    content ''
    position absolute
    pointer-events none
    top -(size + 1)
    right @top
    bottom @top
    left @top
    border size solid color
    border-radius radius

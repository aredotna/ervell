private               = #B60202
textgray              = #585858             // text, titles
lightgrayplus         = rgb(203, 203, 203)  // 1px borders
lightgray             = #9D9D9D             // borders, captions, timestamp
backgroundgray        = #F7F7F7             // search bar
secondbackgroundgray  = #F0F0F0             // search results, dropdown
bordergray            = #E7E7E5             // borders
hovergray             = #050505             // any hovered element
success               = #00C5FF
premium               = #00C5FF
alert                 = #E24D4D
modal_bg              = rgba(58, 58, 58, 0.85)
lighthighlight        = #FDFFDB
highlight             = #EFFF00
special               = #E7DB5F

// z-index
header_z              = 4001
loader_z              = 5001
modal_z               = 6001
lightbox_z            = 6001
rotate_z              = 7001

// fonts
font_sans             = 'Arial', 'Helvetica Neue', 'Helvetica', sans-serif

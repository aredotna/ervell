extends ../../../components/layout/index.jade

block body
  include ./error_path.jade
  .is-empty
    .grid.grid--channel.flex-container
    .channel-empty
      if code == 404
        h2 Page not found.
      else if code == 500
        h2 Something went wrong, please contact #[a(href="mailto:info@are.na") info@are.na] if the problem persists.
        if detail
          pre= detail
      else if code == 401
        h2 You do not have permission to access this private channel.
        if !user
          h2 Maybe you need to #[a(href="/log_in") log in]?

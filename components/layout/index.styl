@import '../../node_modules/nib'
@import '../../node_modules/jeet/stylus/jeet'
@import '../../node_modules/rupture/rupture'
@import 'variables'

global-reset()

// edit()

*
  box-sizing border-box

body, html
  font-family Arial, Helvetica
  color #333
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

input
  focus outline none

h1
  font-size 1.7em

h2
  font-size 1.4em

h3
  font-size 1.17em

h5
  font-size .83em

h6
  font-size .75em

a
  text-decoration: none
  color inherit
  font-weight 700

  &:hover
    color #000

.privacy-public:hover
  color public

.privacy-closed:hover
  color closed

.privacy-private:hover
  color private

.container
  center(1400px)
  padding-top 100px

strong
  font-weight bold

blockquote
  border-left 3px solid #eee
  padding-left 1em
  font-style italic

.abs-fill
  position absolute
  top 0
  left 0
  width 100%
  height 100%

@media (min-width: 2000px)
  .container
    center(1700px)

@media (max-width: 1480px)
  .container
    center(94%)

// colors
closed = #A0A0A0
public = #10860B
private = #B60202
textgray = #333333

@import 'header/index'
@import '../modal/index'
@import '../path/path'

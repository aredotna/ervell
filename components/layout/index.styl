@require 'initial'

rupture.mobile-cutoff = 500px

global-reset()

*
  box-sizing border-box

body, html
  font-family font_sans
  color textgray
  -webkit-tap-highlight-color transparent
  antialiased()
  -webkit-text-size-adjust none

body
  padding 0
  overflow-y scroll
  -webkit-overflow-scrolling touch

body.no-scroll, body.is-scrolling-disabled
  width 100%
  overflow hidden
  position relative
  position fixed
  min-height 0 !important

.error-page
  margin-top 100px

h1
  font-size 28px
  font-size 1.750em
  text-rendering optimizelegibility
  font-weight bold
  margin .75em 0
  line-height 1.3em

h2
  font-size 24px
  font-size 1.500rem
  text-rendering optimizelegibility
  font-weight bold
  margin .4em 0
  line-height 1.3em

h3
  font-size 16px
  font-size 1rem
  text-rendering optimizelegibility
  font-weight bold
  margin 0
  line-height 1.5em

h4
  h4()

h5
  h5()
  // font-size .83em

h6
  h6()
  // font-size .75em

pre
  pre()
  text-align left

code
  code()
  color black

pre > code
  border none
  padding 0

.breadcrumb
  breadcrumb: '/' 5px textgray

  li:last-child:after
    display none

em
  font-style italic

a, .inline-link
  text-decoration: none
  color inherit
  cursor pointer
  hover-color hovergray
  -webkit-tap-highlight-color rgba(0,0,0,0)

strong
  font-weight bold

.light
  font-weight normal

.transparent
  opacity 0.2

.is-hidden
  display none !important

.blur
  -webkit-filter blur(15px)
  filter blur(15px)

blockquote
  border-left 3px bordergray solid
  padding-left 1em
  font-style italic

.abs-fill
  position absolute
  top 0
  left 0
  width 100%
  height 100%

.small-text
  font-size 12px

.valign-outer, .v-outer
  display table
  position absolute
  width 100%
  height 100%

.valign-inner, .v-inner
  display table-cell
  width 100%
  height 100%
  vertical-align middle
  text-align center

.center
  text-align center

.valign--flex
  height 100%
  display flex
  align-items center

.halign--flex
  display flex
  justify-content center

.pointer
  cursor pointer
  font-weight bold
  color textgray

.container
  width 100%

.flex-container
  center(1400)

#scroll-top
  display none
  position fixed
  bottom 12px
  right 12px
  width 46px
  height 46px
  opacity 0.9
  border-radius 50%
  background-color backgroundgray
  color textgray
  border 1px solid bordergray
  text-align center
  line-height 38px
  font-size 23px
  z-index header_z - 1

  &:hover
    color hovergray

privacy-color('.privacy--', color)

force-hardware-acceleration()
  transform translate3d(0, 0, 0)

a.btn, input.btn
  display inline-block
  text-align center
  font-weight bold
  border 2px solid black
  color black
  width unit * 9
  font-size 20px
  line-height 50px
  pointer cursor
  &:hover
    background-color black
    color white
  &--white
    border 2px solid white
    color white
    background-color transparent
    &:hover
      background-color white
      color textgray

.rotate
  display none
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  z-index rotate_z
  background-color backgroundgray
  color textgray

  .rotate__text
    top 35%
    left 20%
    font-size 1.3em
    line-height 1.2em
    width 60%
    text-align center
    position absolute

  .iconic
    margin-bottom 10px

for i in (1..8)
  @media (min-width: (block_width_mar * i) + 20)
    .flex-container
      center(block_width_mar * i)

@media (max-width:(block_width_mar * 3) + 20)
  .flex-container
    center(90%)

@media (max-width:500px)
  html, body
    font-size 13px
    padding 0

  #scroll-top
    display block

  .no-scroll #scroll-top, .no-scroll-button #scroll-top
    display none

@media (max-height:414px) and (max-width:780px) and (min-aspect-ratio: 5/4)
  .rotate
    display block


@import '../variables'

topbar_h = 50px

#layout-header
  position: fixed
  top: 0
  left: 0
  height: topbar_h
  line-height: topbar_h
  width: 100%
  background-color: rgba(250, 250, 250, 1)
  padding: 0 3em
  display: flex
  justify-content: space-between
  z-index: header_z

  .search
    flex-grow: 3

    input
      width: 100%
      height: 100%
      font-size: 18px
      background: transparent
      border: none
      line-height: topbar_h
      outline: 0
      font-family: Arial
      font-weight 100

  .right
    flex-grow: 1
    text-align: right

  .user
    position relative

    .username
      color: #999
      font-weight bold
      font-size 14px
      position relative

    .username:after
      content "â–¼"
      color #aaa
      font-size 8px
      vertical-align middle
      margin-left 0.3em

    .dropdown
      position absolute
      top topbar_h
      right 0
      display none

    &:hover .dropdown
      display block

  span
    padding: 0 0.25em
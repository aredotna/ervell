doctype html
- colorClass = sd.IS_INVERTED ? 'is-inverted' : ''
- loggedInClass = user ? 'is-logged-in' : 'not-logged-in'
html(class="#{colorClass} #{loggedInClass}")
  head
    title
      | Are.na
      if channel
        |  / #{channel.get('title')}
      else if author
        |  / #{author.get('username')}

    include ../../components/meta/templates/meta.jade
    block meta
    link( type='text/css', rel='stylesheet', href=asset('/assets/all.css') )
    block styles

    - extraClasses = ''

    block vars

  body(class=extraClasses)
    #modal-container
      //- rendered by client
    #l-lightbox-container
      //- rendered by client
    include header/templates/index.jade
    .container
      block body

    #l-loader-container.abs-fill
      include loader/templates/index.jade

    #message-container

    a#scroll-top(data-section="#") &uarr;

    unless user && user.id
      include ../logged_out_cta/index.jade

    include analytics.jade

    #scripts
      != sharify.script()
      //- Add Google's jQuery
      script( src="//ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js" )
      script( src="//js.pusher.com/2.2/pusher.min.js")
      script( src=asset('/assets/vendor.js') )
      script( src=asset('/assets/layout.js') )
      block scripts

.grid__block--new-block
  .grid__block__inner
    background-color backgroundgray

    &:hover
      border 1px solid #fff
      cursor text

  fieldset
    margin 0

  .plus-placeholder, .add-block__placeholder
    position absolute
    width 90%
    left 5%
    top 38%
    font-size 40px
    text-align center
    pointer-events none
    color lightgray

  .add-block__placeholder
    top 10%
    font-size 21px
    line-height 1.5
    display none
    pointer-events all
    padding 15% 4% 0 4%

  .pointer
    font-weight normal
    color lightgray


.grid__block--new-block__content-field
  opacity 0
  width 94%
  height 240px
  border 0
  margin 10px 0 0 0
  background none
  antialiased()

.grid__block__inner:hover, .grid__block.active
  .grid__block--new-block__content-field
    opacity 1
    background-color secondbackgroundgray

  .plus-placeholder
    display none

  .add-block__placeholder
    display block

.grid__block.active .add-block__placeholder
    display none

.add-block__placeholder__choose
  border-bottom 2px solid lightgray

.grid__block--new-block__content-field::-webkit-input-placeholder
  font-size 22px
  line-height 1.3em
  text-align center
  padding 60px 0 0 0
  color textgray

.grid__block--new-block__content-field:-moz-placeholder
  font-size 22px
  line-height 1.3em
  text-align center

.grid__block--new-block__submit
  color lightgray
  width 100%
  background transparent
  margin 0

.grid__block--new-block__submit:hover
  color hovergray
  cursor pointer
  background transparent

/* add block behavior */

.grid__block--new-block__title
  color lightgray

.grid__block--new-block__form
  padding 0.2em

.grid__block--new-block__form.active
  opacity 1
  pointer-events all

.grid__block--new-block__cancel
  position absolute
  bottom 1em
  right 1em

@media (max-width:500px)
  .grid__block--new-block .plus-placeholder
    display none

  .grid__block--new-block .add-block__placeholder
    display block
    z-index header_z - 1

  .grid__block--new-block__content-field
    background-color transparent

  .grid__block__inner:hover, .grid__block.active
    .grid__block--new-block__content-field
      background-color transparent
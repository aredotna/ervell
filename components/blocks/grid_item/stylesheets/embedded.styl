.grid__block--embedded
  border 1px solid bordergray
  .grid__block__inner:hover
    border-color transparent
  &__content
    a,p
      line-height 1.5
    a
      font-weight bold
    p
      display none
    p:before
      content "+" attr(data-length) " "
    @media (min-width:(block_width_mar * 4) + 20)
      p.gt7
        display block
    @media (min-width:(block_width_mar * 3) + 20) and (max-width:(block_width_mar * 4) + 20)
      p.gt5
        display block
    @media (min-width:(block_width_mar * 2) + 20) and (max-width:(block_width_mar * 3) + 20)
      p.gt3
        display block
    @media (min-width:0) and (max-width:(block_width_mar * 2) + 20)
      p.gt2
        display block
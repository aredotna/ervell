@require '../../layout/variables'

.attr-backdrop
  position fixed
  top 0
  bottom 0
  left 0
  right 0
  opacity 0
  background-color modal_bg
  pointer-events none
  cursor pointer
  z-index 8001

.attr-editor
  position absolute
  top 0
  left 0
  display none

.attr-value
  height 100%

.attribute-group
  position relative

  form,
  input,
  textarea
    width 100%
    height 100%
    margin 0
    padding 2px
    background-color #fff
    word-break break-word

  &.can-edit:hover
    background-color lighthighlight
    -moz-box-shadow none
    -webkit-box-shadow none
    box-shadow none
    cursor text
    color textgray

  textarea
    color #222
    padding 0 0 0 6px

.is-absent
  width 100%

  &.can-read
    display none !important

  &.can-edit
    display block !important

.placeholder
  opacity 0.5

.is-editing
  .attr-backdrop
    opacity 0.75
    pointer-events all

  .attr-value
    opacity 0

  .attr-editor, .attr-help
    display block
    padding 0
    z-index 8004

  textarea
    color #333
    padding 0

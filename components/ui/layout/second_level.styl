.Constrain
  layout-block-constrain()

  &--narrow
    max-width layout-narrow-width

.Page
  layout-block-constrain()
  padding 1em 0
  // Offset height for default logged-in-nav
  margin topbar_h auto 0 auto

  &--narrow
    max-width layout-narrow-width
    padding 1em

.PageNarrowBreakout
  margin-left -4em !important
  margin-right -4em !important

  +below(layout-narrow-width + (8 * font-size-root))
    margin-left inherit !important
    margin-right inherit !important

.Section
  collapsed-margins(4em)

.Narrow
  max-width layout-narrow-width
  margin-right auto
  margin-left auto

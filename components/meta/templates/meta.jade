if sd.SUBJECT
  meta(name="robots" content="none")

//- default
meta(property="description" content="Are.na is a social platform for creative and collaborative research.")

//- verification
meta(name="google-site-verification" content="yEDzyeh9dYsQoRw7VJA6X5aVthUCYVTNK6nOUQU1eEE")
meta(name="google-site-verification" content="YlzaBIQnBQhN5JFfKeoinJXrTlfdmdtFZ6s8Ez_O8vc")

//- mobile
meta(name="viewport", content="width=device-width, initial-scale=1.0, user-scalable=no, maximum-scale=1.0, minimal-ui")
meta(name="apple-mobile-web-app-capable" content="yes")
meta(name="apple-mobile-web-app-status-bar-style" content="black")
link(rel="apple-touch-icon" href="#{sd.IMAGE_PATH}touch-icon-iphone.png")
link(rel="apple-touch-icon" sizes="76x76" href="#{sd.IMAGE_PATH}touch-icon-ipad.png")
link(rel="apple-touch-icon" sizes="120x120" href="#{sd.IMAGE_PATH}touch-icon-iphone-retina.png")
link(rel="apple-touch-icon" sizes="152x152" href="#{sd.IMAGE_PATH}touch-icon-ipad-retina.png")
link(rel="apple-touch-startup-image" href="#{sd.IMAGE_PATH}loading.png")

//- safari
link(rel="mask-icon" href="#{sd.IMAGE_PATH}arena-mark.svg" color="black")

//- twitter & fb meta
meta(name="twitter:description", content="Are.na is a social platform for creative and collaborative research.")
meta(name="twitter:site", content="@aredotna")
meta(property="og:description" content="Are.na is a social platform for creative and collaborative research.")

if title
  meta(name="twitter:title", content="Are.na / #{title}")
  meta(name="twitter:url", content="https://www.are.na#{sd.CURRENT_PATH}")
  meta(property="og:title" content="Are.na / #{title}")
  meta(property="og:url" content="https://www.are.na#{sd.CURRENT_PATH}")
else
  meta(name="twitter:title", content="Are.na")
  meta(name="twitter:url", content="https://www.are.na")
  meta(property="og:title" content="Are.na")
  meta(property="og:url" content="https://www.are.na")

if blocks
  meta(name="twitter:card", content="summary_large_image")
  - var filtered = _.filter(blocks, function(block){ return block.has('image'); })
  each block, index in filtered.slice(0,4)
    if block.has('image')
      if index == 0
        meta(name="twitter:image", content="#{block.get('image').display.url}")
      meta(property="og:image" content="#{block.get('image').display.url}")

else if image
  meta(name="twitter:card", content="summary_large_image")
  meta(name="twitter:image", content="#{image}")
  meta(property="og:image" content="#{image}")


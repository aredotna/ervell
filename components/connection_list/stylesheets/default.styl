.Connection
  display block
  collapsed-margins(0.5em)
  border 2px solid
  cursor pointer

  > span
    display flex
    align-items center
    justify-content space-between
    padding button-padding

  &__title
  &__author
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
    max-width 75%

  &__title
    flex 1
    font-size font-size-base
    line-height line-height-base
    margin-right 0.5em

    > span
      font-size font-size-xs

  &__author
    font-size font-size-xs
    line-height line-height-base

  for visibility in 'public' 'closed' 'private'
    &[data-visibility=\'{visibility}\']
      color lookup('colors-channel-' + visibility)
      border-color rgba(@color, colors-border-alpha)
      &:hover
        border-color @color

  &[data-visibility='placeholder']
    cursor default
    color colors-gray-light
    border-color rgba(@color, colors-border-alpha)
    &:hover
      border-color @color

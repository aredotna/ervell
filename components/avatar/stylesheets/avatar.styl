@require '../../layout/variables'

.user__avatar--display
  position relative
  width 140px
  height 140px
  margin 0 auto 22px auto
  background-color backgroundgray
  // border-radius 50px

  &.is-loading
    background-size 140px 140px
    background-image linear-gradient(
      45deg,
      rgba(bordergray, 0.5)   25%,
      transparent             25%,
      transparent             50%,
      rgba(bordergray, 0.5)   50%,
      rgba(bordergray, 0.5)   75%,
      transparent             75%,
      transparent
    )
    -webkit-animation loading-avatar 0.5s linear infinite
    animation loading-avatar 0.5s linear infinite

    .user__avatar__image
      display none

  .user__avatar__image
    position absolute
    left 0
    top 0
    max-width 100%
  // border-radius 50px

  .user__avatar__initials__content
    font-size 3.1em

.user__avatar--thumb
  position relative
  width 40px
  height 40px

  .user__avatar__image
    position absolute
    left 0
    top 12px
    max-width 100%

  .user__avatar__initials__content
    font-size 1.1em

.settings-avatar .user__avatar--display
  width 100px
  height 100px

.settings-avatar .pointer
  &:hover
    color hovergray

@media (max-width:(block_width_mar * 3) + 30)
  .user__avatar--display
    width 120px
    height 120px

@media (max-width:410px)
  .user__avatar--display
    width 110px
    height 110px

  .dropdown
    .user__avatar--thumb
      height 100%
      width 30px
      line-height 30px
      top 5px

@keyframes loading-avatar
  from
    background-position 0 0
  to
    background-position 280px 140px

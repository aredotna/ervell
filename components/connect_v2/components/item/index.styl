.Connect__item
  &:nth-child(2) > a
    border-top-left-radius input-border-radius
    border-top-right-radius input-border-radius

  &:last-child > a
    border-bottom-left-radius input-border-radius
    border-bottom-right-radius input-border-radius

  > a
    display block
    position relative
    margin 0 0 -1px 0
    // Extra rightmost padding to account check/remove glyphs
    padding input-v-padding (input-h-padding * 3) input-v-padding input-h-padding
    border 1px solid colors-gray-lighter
    line-height 1
    text-align left
    font-weight normal !important // Sigh

    > span
      overflow ellipsis

    &:hover
      border 1px solid colors-gray-text
      z-index 1

    &:hover
    &[data-selected]
      &:after
        display block
        content '✔'
        position absolute
        top 50%
        right 1em
        transform translateY(-50%)
        color colors-gray-light

    &[data-selected]
      > span
        opacity 0.5

      &:hover:after
        content '×'
        font-size font-size-lg
        right 0.5em

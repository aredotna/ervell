.LoggedOutFooter
  font-size font-size-base
  padding 0 2em 10em
  display flex
  justify-content space-between
  align-items flex-start

  &__logo
    display inline-block
    width 30%
    > strong, > span
      display inline-block
      position relative
      width @font-size * 2
      height @font-size
      margin-right 0.25em
      vertical-align middle

      > svg
        position absolute
        top 0
        left -1
        width 100%
        height 100%
        fill colors-gray-text

    &:hover
      > span > svg
        fill colors-gray-hover

  &__sections
    display flex
    align-self flex-end
    width 100%

    > section 
      flex 1
      width 17.5%
      margin-right 5em

      a
        font-weight bold
        display block
        line-height line-height-tall

        &:first-of-type
          margin-top 1em


+below(1024px)
  .LoggedOutFooter
    display block

    > a
      padding 0.5em

    &__logo
      display block
      width 100%

    &__sections
      display block
      > section
        padding-left .5em
        display block
        width 100%
        margin 3em 0

html:not([data-path='/'])
  .LoggedOutFooter
    padding-top 2em
    border-top 1px solid colors-gray-border